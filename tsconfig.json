{
  "compilerOptions": {
    "composite": true,
    // General
    "pretty": true,
    "listFiles": false,
    "inlineSources": false,
    "removeComments": false, // keep comments to make tests coverage working
    // Targets & outputs
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "dom"],
    "noEmit": false,
    "noLib": false,
    "baseUrl": "source",
    // "rootDir": "source",
    "outDir": "build/output",
    "declarationDir": "build/output",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // Debugging
    "sourceMap": true,
    "inlineSourceMap": false,
    // Strictness
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    // Other
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "reactronic": [
        "../library/reactronic/source/api.ts"
      ],
      "verstak": [
        "../library/verstak/source/api.ts"
      ],
      "verstak-express": [
        "../library/verstak-express/api.ts"
      ],
      "verstak-markdown": [
        "../library/verstak-markdown/source/api.ts"
      ],
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "label"
          ]
        }
      }
    ]
  },
  "include": [
    "source/**/*.boo",
    "source/**/*.ts",
    "library/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "source/assets/sheets/**/*.ts",
  ]
}
